<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.week3_assignment2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="distance" text="Distance"/>
    <TextField fx:id="distanceText"/>
    <Label fx:id="Fuelused" text="Fuel Used"/>
    <TextField fx:id="fuelText"/>
    <Button fx:id="calculate" text="Calculate" onAction="#setResult"/>

    <Label fx:id="result" text=""/>

    <Button fx:id="EN" onAction="#chanceLanguage_en" text="en"/>
    <Button fx:id="FR" onAction="#chanceLanguage_fr" text="fr"/>
    <Button fx:id="JP" onAction="#chanceLanguage_jp" text="jp"/>
    <Button fx:id="IR" onAction="#chanceLanguage_ir" text="ir"/>
</VBox>
